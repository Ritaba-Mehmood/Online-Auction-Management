 @model SemesterProj.Models.Auth

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - AuctionHub</title>
 </head>
<body style="background-color: #121212; min-height: 100vh; margin: 0;">
    
    <!-- Register Form -->
    <div class="d-flex justify-content-center align-items-center" style="height: calc(100vh - 56px);">
        <div class="card shadow-lg p-4" style="background-color: #1a1a1a; width: 400px; border-radius: 12px; color: #FFFFFF;">
            <h2 class="text-center" style="color: #DAA520;">Register</h2>
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Success"]</div>
            }
            <form asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Username" style="color: #FFFFFF;">Username</label>
                    <input asp-for="Username" class="form-control" style="background-color: #121212; color: #FFFFFF; border-color: #DAA520;" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" style="color: #FFFFFF;">Email</label>
                    <input asp-for="Email" class="form-control" style="background-color: #121212; color: #FFFFFF; border-color: #DAA520;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" style="color: #FFFFFF;">Password</label>
                    <input asp-for="Password" type="password" class="form-control" style="background-color: #121212; color: #FFFFFF; border-color: #DAA520;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn w-100" style="background-color: #DAA520; color: #121212;">Register</button>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
