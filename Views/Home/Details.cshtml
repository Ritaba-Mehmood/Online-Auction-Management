        @model SemesterProj.Models.Item

<div class="container-fluid mt-4 mb-5">
    <div class="row">
        <!-- Main Image Section -->
        <div class="col-md-6">
            <div class="image-container text-center">
                <img id="mainImage" src="@Model.Image" alt="@Model.Title" class="img-fluid" style="border-radius: 10px; border: 5px solid #FFFFFF;">

                <!-- Thumbnail Row -->
                <div class="thumbnails mt-3 d-flex justify-content-center gap-2">
                    @for (int i = 0; i < 5; i++) // Loop to show 5 thumbnails
                    {
                        <img src="@Model.Image" alt="Thumbnail @i" class="thumbnail img-fluid" onclick="changeImage(this)">
                    }
                </div>
            </div>
        </div>

        <!-- Details Section -->
        <div class="col-md-6" style="background-color: #FFFFFF; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <h1 style="color: #121212;">@Model.Title</h1>
            <p style="color: #121212;">@Model.Description</p>
            <p style="color: #121212;"><strong>Category:</strong> @Model.Category?.Name</p>
            <p style="color: #121212;"><strong>Current Bid:</strong> @Model.CurrentBid.ToString("C")</p>
            <p style="color: #121212;"><strong>Starting Price:</strong> @Model.MinBid.ToString("C")</p>
            <p style="color: #121212;"><strong>Auction Ends:</strong> @Model.BidEndDate.ToString("g")</p>

            <!-- Place Bid Form -->
            <form asp-action="PlaceBid" asp-controller="Bids" method="post" id="bidForm">
                <input type="hidden" name="ItemId" value="@Model.ItemId" />
                <div class="form-group">
                    <label for="bidAmount" style="color: #121212;"><strong>Your Bid Amount:</strong></label>
                    <input type="number" name="BidAmount" id="bidAmount" class="form-control" placeholder="Enter your bid" min="@Model.CurrentBid + @Model.BidIncrement" step="0.01" required />
                </div>
                <button type="submit" class="btn mt-3" style="background-color: #DAA520; color: #FFFFFF; font-weight: 600;">Submit Bid</button>
            </form>

            <!-- Notification -->
            <div id="bidNotification" class="alert alert-success mt-3" style="display: none;">Your bid has been placed successfully!</div>
        </div>
    </div>
</div>

<script>
    // JavaScript to handle thumbnail clicks and change the main image
    function changeImage(thumbnail) {
        const mainImage = document.getElementById('mainImage');
        mainImage.src = thumbnail.src;
    }

    // JavaScript to handle bid submission and show notification
    document.getElementById('bidForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent form submission to refresh the page

        // Simulate bid placement
        const bidNotification = document.getElementById('bidNotification');
        bidNotification.style.display = 'block';

        // Clear the input field
        document.getElementById('bidAmount').value = '';

        // Hide the notification after 3 seconds
        setTimeout(() => {
            bidNotification.style.display = 'none';
        }, 3000);
    });
</script>

<style>
    .thumbnail {
        width: 80px;
        height: 80px;
        border: 2px solid #DAA520;
        border-radius: 8px;
        cursor: pointer;
        object-fit: cover;
    }

        .thumbnail:hover {
            border-color: #FFFFFF;
        }
</style>
