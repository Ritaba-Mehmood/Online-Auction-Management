


                                    @model SemesterProj.Models.Auth

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card" style="background-color: #FFFFFF; border: 1px solid #DAA520;">
                <div class="card-header" style="background-color: #DAA520; color: #121212;">
                    <h3 class="mb-0">User Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            <div class="avatar"
                                 style="background-color: #DAA520; color: #FFFFFF; width: 100px; height: 100px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h2 style="color: #121212;">@Model.Username</h2>
                            <p class="text-muted">Member since @DateTime.Now.ToString("MMMM yyyy")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h4 style="color: #DAA520;">Account Details</h4>
                            <dl class="row">
                                <dt class="col-sm-4">User ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@(Model.Email ?? "Not provided")</dd>

                                <dt class="col-sm-4">Username:</dt>
                                <dd class="col-sm-8">@Model.Username</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h4 style="color: #DAA520;">Actions</h4>
                            <div class="d-grid gap-2">
                                <a asp-controller="User" asp-action="Sell" class="btn"
                                   style="background-color: #DAA520; color: #121212; border: none;">
                                    <i class="fas fa-plus-circle me-2"></i>Sell New Item
                                </a>
                                <a asp-controller="User" asp-action="MyBid" class="btn"
                                   style="background-color: transparent; color: #DAA520; border: 1px solid #DAA520;">
                                    <i class="fas fa-history me-2"></i>My Bids
                                </a>
                                <a href="#" class="btn"
                                   style="background-color: transparent; color: #DAA520; border: 1px solid #DAA520;">
                                    <i class="fas fa-cog me-2"></i>Account Settings
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />    <br />    <br />    <br />    <br />    <br />    <br />
</div>
